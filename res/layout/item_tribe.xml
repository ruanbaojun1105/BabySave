<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:background="@drawable/item_press" >

    <mybaby.ui.widget.RoundImageViewByXfermode
        android:id="@+id/iv_avater"
        android:layout_width="@dimen/person_page_user_image_width"
        android:layout_height="@dimen/person_page_user_image_height"
        android:src="@drawable/avatar"
        android:layout_margin="@dimen/common_spacing"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="@dimen/middle_font_size"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_avater"
        android:layout_toEndOf="@+id/iv_avater" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/titile_rela"
    android:layout_height="wrap_content"
    >
    <mybaby.ui.widget.RoundImageViewByXfermode
        android:id="@+id/avatarThumbnailUrl"
        android:layout_width="@dimen/image_small_head"
        android:layout_height="@dimen/image_small_head"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="@dimen/padding_width_small"
        android:lines="1"
        android:maxEms="30"
        android:maxLength="10"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/community_content_gray"
        android:textSize="@dimen/content_font_size"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/avatarThumbnailUrl"
        android:layout_toEndOf="@+id/avatarThumbnailUrl" />
    <TextView
        android:id="@+id/cometype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_centerVertical="true"
        android:textColor="@color/gray_1"
        android:textSize="@dimen/small_font_size"
        android:layout_toRightOf="@+id/name"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/name"
        />
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:textColor="@color/gray_1"
        android:textSize="@dimen/small_font_size"
        android:paddingRight="3dp"
        android:layout_toLeftOf="@+id/edit_menu_tag"
        android:layout_toStartOf="@+id/edit_menu_tag" />

    <TextView
        android:id="@+id/edit_menu_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/fa_angle_down"
        android:layout_centerVertical="true"
        android:textColor="@color/gray_1"
        android:textSize="@dimen/common_font_size"
        android:layout_alignTop="@+id/cometype"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/notification_item"
    android:layout_height="70dp"
    android:background="@drawable/item_press"
    >

    <RelativeLayout
        android:id="@+id/rl_icon"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/padding_width"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <mybaby.ui.widget.CircleImageView
            android:layout_width="@dimen/notification_image_width"
            android:layout_height="@dimen/notification_image_height"
            android:id="@+id/riv_notification_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/tv_notification_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/badge_bg_red_radiu"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/xsmall_font_size"
            android:textStyle="bold"
            android:maxWidth="23dp"
            android:layout_marginLeft="-7dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/riv_notification_image"
            android:visibility="gone"
            />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/rl_icon"
        android:layout_toEndOf="@+id/rl_icon"
        android:gravity="center|left"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="@dimen/padding_width"
        android:id="@+id/linearLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动态通知"
                android:textColor="@color/black"
                android:textSize="@dimen/middle_font_size"
                android:layout_alignParentTop="true"
                android:layout_above="@+id/tv_enter"
                android:id="@+id/tv_notification_title"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/tv_notification_lasttime"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="@dimen/small_margin"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:id="@+id/tv_notification_lasttime"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:singleLine="true"
                android:textSize="@dimen/small_font_size"
                android:textColor="@color/gray_1"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_notification_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/rl_icon"
            android:layout_toEndOf="@+id/rl_icon"
            android:layout_marginTop="@dimen/small_margin"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/gray_1"
            />
    </LinearLayout>
    <include layout="@layout/activity_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
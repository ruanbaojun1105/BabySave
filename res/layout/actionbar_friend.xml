<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <ImageView
        android:id="@+id/addPicture"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/common_spacing"
        android:src="@drawable/ic_action_camera" />
    <TextView
        android:id="@+id/right_btn"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/common_spacing"
        android:text="关闭"
        android:textSize="@dimen/middle_font_size"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:textColor="@color/mainThemeColor"
        />

    <include layout="@layout/actionbar_title_holder_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/addPicture"
        android:layout_toStartOf="@+id/addPicture"
        />
</RelativeLayout>
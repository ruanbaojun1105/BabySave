<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>
<RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/notification_item"
    android:layout_height="@dimen/lin_height"
    android:paddingLeft="@dimen/padding_width"
    android:paddingRight="@dimen/padding_width"
    android:background="@drawable/item_press"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:gravity="center|left"
        android:id="@+id/linearLayout"
        android:layout_toLeftOf="@+id/rl_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/discovery_icon"
            android:scaleType="centerCrop"
            />
            <TextView
                android:id="@+id/discovery_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/middle_font_size"
                android:paddingLeft="@dimen/padding_width"
                android:text="fadsf"
                android:singleLine="true"
                android:layout_marginRight="@dimen/small_margin"
                />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/discovery_message"
            android:singleLine="true"
            android:gravity="right"
            android:text="fadsf"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/discovery_tag"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/gray"
        android:textSize="@dimen/middle_font_size"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <RelativeLayout
        android:id="@+id/rl_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="2dp"
        android:layout_margin="2dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/discovery_tag"
        android:layout_toStartOf="@+id/discovery_tag">

        <mybaby.ui.widget.RoundImageViewByXfermode
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/notification_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tv_notification_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/badge_bg_red_radiu"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/xsmall_font_size"
            android:textStyle="bold"
            android:maxWidth="25dp"
            android:layout_marginLeft="-7dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/notification_image" />
    </RelativeLayout>
</RelativeLayout>
    <include
        layout="@layout/activity_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="60dp"
        android:id="@+id/discovery_line"
        />
</LinearLayout>
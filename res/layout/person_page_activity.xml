<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/gray_line" />
    <TextView
        android:id="@+id/tv_activity_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:textSize="@dimen/common_font_size"
        android:textColor="@color/gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@drawable/line" />

    <RelativeLayout
        android:id="@+id/rl_top1activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_press"
        android:layout_marginTop="@dimen/small_spacing"
        android:layout_marginBottom="@dimen/small_spacing"
        android:clickable="true" >

        <ImageView
            android:id="@+id/iv_activity"
            android:layout_width="@dimen/person_page_activity_image_width"
            android:layout_height="@dimen/person_page_activity_image_height"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/common_margin"
            android:scaleType="centerCrop"
            android:src="@drawable/activity_2x" />

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_enter"
            android:layout_toRightOf="@+id/iv_activity"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin"
                android:textColor="@color/black_gray"
                android:gravity="center_vertical|left"
                android:lines="2"
                android:ellipsize="end"
                android:textSize="@dimen/middle_font_size" />

            <TextView
                android:id="@+id/tv_activity_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                android:layout_marginLeft="@dimen/common_margin"
                android:textColor="@color/gray"
                android:textSize="@dimen/small_font_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_centerVertical="true"
            android:text="@string/fa_angle_right"
            android:textColor="@color/gray"
            android:textSize="@dimen/large_font_size" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/gray_line" />
</LinearLayout>
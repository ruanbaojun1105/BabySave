<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@id/content_page"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/sendtopic"
        android:layout_alignParentTop="true"
        layout="@layout/blank_page" />

    <LinearLayout
        android:id="@+id/sendtopic"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/item_press"
        android:orientation="vertical"
        android:visibility="visible"
        >
		<View  
		    android:layout_width="fill_parent"
		    android:layout_height="1px"
		    android:background="@color/gray_line"
		    />
		<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent" 
                android:layout_gravity="center"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/text_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/mainThemeColor"
                    android:text="@string/fa_map_marker"
                    android:textSize="@dimen/middle_font_size"
                    />

                <TextView
                    android:id="@+id/send_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="签到"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/mainThemeColor"
                    android:textSize="@dimen/middle_font_size" />

            </LinearLayout>

    </LinearLayout>

</RelativeLayout>
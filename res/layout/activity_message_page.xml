<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/lin_height" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dip"
                android:text="评论提醒"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:textSize="18sp" />
            
            <mybaby.ui.widget.CheckSwitchButton
                android:id="@+id/push_reply"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:checked="true"
                android:layout_marginRight="10dip"
                />
        </RelativeLayout>

        <include layout="@layout/activity_line"/>
        
        <RelativeLayout
            
            android:layout_width="match_parent"
            android:layout_height="@dimen/lin_height"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dip"
                android:text="点赞提醒"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:textSize="18sp" />
            
            <mybaby.ui.widget.CheckSwitchButton
                android:id="@+id/push_like"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:checked="true"
                android:layout_marginRight="10dip"
                />
        </RelativeLayout>

        <include layout="@layout/activity_line"/>
        
        <RelativeLayout
            
            android:layout_width="match_parent"
            android:layout_height="@dimen/lin_height" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dip"
                android:text="好友动态提醒"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:textSize="18sp" />
            
            <mybaby.ui.widget.CheckSwitchButton 
                android:id="@+id/push_friends_activity"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:checked="true"
                android:layout_marginRight="10dip"
                />
        </RelativeLayout>

        <include layout="@layout/activity_line"/>
        
        <RelativeLayout
            
            android:layout_width="match_parent"
            android:layout_height="@dimen/lin_height" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dip"
                android:text="关注提醒"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:textSize="18sp" />
            
            <mybaby.ui.widget.CheckSwitchButton
                android:id="@+id/push_follow"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:checked="true"
                android:layout_marginRight="10dip"
                />
        </RelativeLayout>
        
        <include layout="@layout/activity_line"/>
        
        <RelativeLayout
            
            android:layout_width="match_parent"
            android:layout_height="@dimen/lin_height" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dip"
                android:text="系统通知"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:textSize="18sp" />
            
            <mybaby.ui.widget.CheckSwitchButton
                android:id="@+id/push_system"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:checked="true"
                android:layout_marginRight="10dip"
                />
        </RelativeLayout>
        
        
    </LinearLayout>

</ScrollView>
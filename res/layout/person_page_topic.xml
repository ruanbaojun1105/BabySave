<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_big_topic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/gray_line" />
    <TextView
        android:id="@+id/tv_topic_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:textSize="@dimen/common_font_size"
        android:textColor="@color/gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@drawable/line" />

    <RelativeLayout
        android:id="@+id/rl_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_press"
        android:clickable="true" >

        <LinearLayout
            android:id="@+id/first_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/middle_margin"
            android:layout_marginTop="@dimen/middle_margin"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_topic1"
                android:layout_width="@dimen/person_page_placeholder_text_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/large_margin"
                android:singleLine="true"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/middle_font_size" />

            <TextView
                android:id="@+id/tv_topic2"
                android:layout_width="@dimen/person_page_placeholder_text_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/large_margin"
                android:singleLine="true"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/middle_font_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_topic"
            android:layout_marginBottom="@dimen/middle_margin"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_topic3"
                android:layout_width="@dimen/person_page_placeholder_text_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/large_margin"
                android:singleLine="true"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/middle_font_size" />

            <TextView
                android:id="@+id/tv_topic4"
                android:layout_width="@dimen/person_page_placeholder_text_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/large_margin"
                android:singleLine="true"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/middle_font_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/common_margin"
            android:text="@string/fa_angle_right"
            android:textColor="@color/gray"
            android:textSize="@dimen/large_font_size" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/gray_line" />
</LinearLayout>
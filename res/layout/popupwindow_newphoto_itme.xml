<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="110dp"
    android:gravity="center"
    android:background="@drawable/newphoto"
    android:orientation="horizontal" >

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/photo_rela"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            app:riv_border_width="1px"
            app:riv_oval="false"
            app:riv_border_color="@color/bigimage_color"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/photo_image"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            />

        <com.makeramen.roundedimageview.RoundedImageView
            app:riv_border_width="1px"
            app:riv_oval="false"
            app:riv_border_color="@color/bigimage_color"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/photo_image2"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/photo_image"
            android:layout_alignLeft="@+id/photo_image"
            android:layout_alignStart="@+id/photo_image"
            android:layout_alignRight="@+id/photo_image"
            android:layout_alignEnd="@+id/photo_image"/>
        <com.makeramen.roundedimageview.RoundedImageView
            app:riv_border_width="1px"
            app:riv_oval="false"
            app:riv_border_color="@color/bigimage_color"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/photo_image3"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp"
            android:layout_alignBottom="@+id/photo_image2"
            android:layout_alignLeft="@+id/photo_image2"
            android:layout_alignStart="@+id/photo_image2"
            android:layout_alignRight="@+id/photo_image2"
            android:layout_alignEnd="@+id/photo_image2" />

    </RelativeLayout>


</RelativeLayout>
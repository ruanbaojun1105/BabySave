
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/home_me_head"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/padding_width"
        android:paddingRight="@dimen/padding_width"
        >

        <mybaby.ui.widget.RoundImageViewByXfermode
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/home_me_image"
            android:scaleType="fitCenter"
            android:src="@drawable/friends_logo"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_me_name"
            android:text="王小二"
            android:textColor="@color/gray"
            android:textSize="@dimen/middle_font_size"
            android:layout_gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_width"
            android:layout_toRightOf="@+id/home_me_image"
            android:layout_toEndOf="@+id/home_me_image"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tag"
            android:layout_alignBottom="@+id/home_me_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/middle_font_size"
            android:layout_gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <include
        layout="@layout/activity_line"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/padding_width"
        android:paddingRight="@dimen/padding_width"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin="2dp"
        android:background="@drawable/item_press"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tribe_lin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_tribe_num"
            android:text="0"
            android:layout_gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            android:textSize="@dimen/common_font_size"
            android:textColor="@color/community_content_gray"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群组"
            android:layout_gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/gray_1"
            android:textSize="@dimen/small_font_size"
            />
    </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="@drawable/item_press"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/friend_lin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_friend_num"
                android:text="0"
                android:textSize="@dimen/common_font_size"
                android:layout_gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/community_content_gray"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好友"
                android:layout_gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/gray_1"
                android:textSize="@dimen/small_font_size"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="@drawable/item_press"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/follow_lin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_follow_num"
                android:text="0"
                android:textSize="@dimen/common_font_size"
                android:layout_gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/community_content_gray"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:layout_gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/gray_1"
                android:textSize="@dimen/small_font_size"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="@drawable/item_press"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/follower_lin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_follower_num"
                android:text="0"
                android:textSize="@dimen/common_font_size"
                android:layout_gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/community_content_gray"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝"
                android:layout_gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/gray_1"
                android:textSize="@dimen/small_font_size"
                />
        </LinearLayout>
    </LinearLayout>
    <include
        layout="@layout/activity_line"
        />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <TextView
        android:id="@+id/sendtopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_bg_gray"
        android:text="发布"
        android:textColor="@color/mainThemeColor"
        android:textSize="@dimen/middle_font_size"
        android:padding="@dimen/small_spacing"
        android:layout_margin="2dp"
         />

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/sendtopic"
        layout="@layout/actionbar_title_holder" />

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/link_item"
    android:background="@drawable/btn_bg_gray"
    >
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/link_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/link_desc"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/community_content_gray"
        android:textSize="@dimen/common_font_size"
        android:layout_marginLeft="5dp"
        android:includeFontPadding="false"
        android:lineSpacingMultiplier="1.2"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/link_image"
        android:layout_toEndOf="@+id/link_image" />
</RelativeLayout>